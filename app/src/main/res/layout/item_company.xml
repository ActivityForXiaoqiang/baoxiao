<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_normal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/space_big">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_normal">

            <TextView
                android:id="@+id/item_company_name"
                style="@style/AppTheme.Label.Title"
                android:padding="@dimen/space_normal"
                android:text="公司名称" />

            <TextView
                android:id="@+id/item_company_d"
                style="@style/AppTheme.Label.Discription"
                android:padding="@dimen/space_normal"
                android:text="公司描述ssssssss" />

            <TextView
                android:id="@+id/item_company_c"
                style="@style/AppTheme.Label.Title.Small"
                android:layout_gravity="right"
                android:padding="@dimen/space_small"
                android:text="创建者" />

            <Button
                android:id="@+id/item_company_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/bt_shape_4"
                android:text="申请加入"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_small" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>