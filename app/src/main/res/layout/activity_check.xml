<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <com.github.mmin18.widget.RealtimeBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="20dp"
                app:realtimeOverlayColor="#8000" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/check_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

        <TextView
            android:id="@+id/check_nickname"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="昵称"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/check_sex"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="性别"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/check_realname"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="真实姓名"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/check_code"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="证件号码 :未设置"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/check_birthday"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="出生日期 :未设置"
            android:textSize="@dimen/textsize_title" />

        <TextView
            android:id="@+id/check_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_normal"
            android:background="@drawable/bt_shape"
            android:padding="@dimen/space_normal"
            android:text="电话号码 :未设置"
            android:textSize="@dimen/textsize_title" />
    </LinearLayout>
</ScrollView>